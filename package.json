{
  "name": "zan-live-downloader",
  "version": "1.0.0",
  "description": "Z-aN Live评论弹幕和资源下载CLI工具",
  "main": "index.ts",
  "type": "module",
  "bin": {
    "zan-downloader": "./index.ts"
  },
  "scripts": {
    "start": "source .env && bun index.ts --token \"$ZAN_JWT_TOKEN\" --url \"$ZAN_LIVE_URL\" --session-id \"$ZAN_SESSION_ID\"",
    "download": "source .env && bun index.ts --token \"$ZAN_JWT_TOKEN\" --url \"$ZAN_LIVE_URL\" --session-id \"$ZAN_SESSION_ID\"",
    "login": "source .env && bun index.ts --email \"$ZAN_EMAIL\" --password \"$ZAN_PASSWORD\" --url \"$ZAN_LIVE_URL\"",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "zan-live",
    "downloader",
    "comments",
    "cli",
    "typescript"
  ],
  "author": "CRAB",
  "license": "MIT",
  "dependencies": {
    "@lzwme/m3u8-dl": "^1.4.3",
    "@renmu/m3u8-downloader": "^0.4.0",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "commander": "^14.0.1",
    "ws": "^8.18.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.18.1",
    "typescript": "^5.9.2"
  }
}